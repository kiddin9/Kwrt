
if [ ! -f /etc/config/placeholder ]; then
	uci set system.@system[0].zram_size_mb='28'
	uci set system.@system[0].zram_comp_algo='lz4'
	uci commit system
fi

touch /etc/config/placeholder

sed -i '1i src/gz openwrt_packages2 https://op.supes.top/19.07.5/packages/mipsel_24kc/packages' /etc/opkg/distfeeds.conf
sed -i '1i src/gz openwrt_base2 https://op.supes.top/19.07.5/packages/mipsel_24kc/base' /etc/opkg/distfeeds.conf
sed -i '$a src/gz openwrt_custom https://op.supes.top/packages/mipsel' /etc/opkg/distfeeds.conf

exit 0
